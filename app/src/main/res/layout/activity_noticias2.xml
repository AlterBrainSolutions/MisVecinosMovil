                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewPhoto2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewFecha2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="17-03-2021"
                android:textColor="@color/azulmv"
                app:layout_constraintStart_toStartOf="@+id/textViewDescripNoticia2"
                app:layout_constraintTop_toBottomOf="@+id/textViewDescripNoticia2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

