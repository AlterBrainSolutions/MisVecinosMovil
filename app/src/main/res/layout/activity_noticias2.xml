                app:layout_constraintStart_toStartOf="@+id/textViewNombrefrac3"
                app:layout_constraintTop_toBottomOf="@+id/textViewNombrefrac3" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
