<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grismv"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivPerro_prueba"
        android:layout_width="231dp"
        android:layout_height="208dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_ayuda_reciclaje1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAyudaR1"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:text="DEMO ALGO"
        android:textAlignment="center"
        android:textColor="@color/azulmv"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPerro_prueba" />

    <TextView
        android:id="@+id/tvAyudaR2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAyudaR1" />

