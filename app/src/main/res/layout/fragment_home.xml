        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="110dp">

            <ImageView
                android:id="@+id/imageView_face"
                android:layout_width="107dp"
                android:layout_height="102dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/inadem"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewDescripcion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="48dp"
                android:text="Fraccionamiento Santa Monica Casa 20"
                android:textColor="@color/purple_700"
                app:layout_constraintEnd_toStartOf="@+id/imageView_mas"
                app:layout_constraintStart_toEndOf="@+id/imageView_face"
                app:layout_constraintTop_toTopOf="@+id/imageView_face" />

            <TextView
                android:id="@+id/textViewDescFrac"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="INADEM"
                android:textColor="@color/purple_700"
                app:layout_constraintEnd_toStartOf="@+id/imageView_mas"
                app:layout_constraintStart_toStartOf="@+id/textViewDescripcion"
                app:layout_constraintTop_toBottomOf="@+id/textViewDescripcion" />

            <ImageView
                android:id="@+id/imageView_mas"
                android:layout_width="81dp"
                android:layout_height="90dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/manitacent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp">

            <ImageView
                android:id="@+id/imageViewNoticias"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_ntc"
                app:layout_constraintEnd_toStartOf="@+id/imageViewAgenda"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewAgenda"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_agn"
                app:layout_constraintEnd_toStartOf="@+id/imageViewConversacion"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageViewNoticias"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewConversacion"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_cnv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageViewAgenda"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewEncuestas"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="132dp"
                android:src="@drawable/ic_enc"
                app:layout_constraintEnd_toStartOf="@+id/imageViewTransparenciah"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewTransparenciah"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="132dp"
                android:src="@drawable/ic_trn"
                app:layout_constraintEnd_toStartOf="@+id/imageViewDocumentosh"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageViewEncuestas"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewDocumentosh"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="132dp"
                android:src="@drawable/ic_dcm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageViewTransparenciah"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

